<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/7057507_administration_db?serverTimezone=UTC</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<mapping class="com.model.entities.Company" />
		<mapping class="com.model.entities.Customer" />
		<mapping class="com.model.entities.Tax" />
		<mapping class="com.model.entities.PayMethod" />
		<mapping class="com.model.entities.Product" />
		<mapping class="com.model.entities.ConceptInvoice" />
		<mapping class="com.model.entities.ConceptBudget" />
		<mapping class="com.model.entities.ConceptWorkOrder" />
		<mapping class="com.model.entities.Invoice" />
		<mapping class="com.model.entities.InvoiceDetail" />
		<mapping class="com.model.entities.Budget" />
		<mapping class="com.model.entities.BudgetDetail" />
		<mapping class="com.model.entities.WorkOrder" />
		<mapping class="com.model.entities.WorkOrderDetail" />
	</session-factory>
</hibernate-configuration>
