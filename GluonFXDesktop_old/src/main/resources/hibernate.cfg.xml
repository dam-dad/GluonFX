<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/7057507_administration_db?serverTimezone=UTC</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<mapping class="entities.Company" />
		<mapping class="entities.Customer" />
		<mapping class="entities.Tax" />
		<mapping class="entities.PayMethod" />
		<mapping class="entities.Product" />
		<mapping class="entities.Concept" />
		<mapping class="entities.Invoice" />
		<mapping class="entities.InvoiceDetail" />
		<mapping class="entities.Budget" />
		<mapping class="entities.BudgetDetail" />
		<mapping class="entities.WorkOrder" />
		<mapping class="entities.WorkOrderDetail" />
	</session-factory>
</hibernate-configuration>
